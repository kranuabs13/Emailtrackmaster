<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <!-- Stable GUID for your add-in -->
  <Id>7d2b3c4e-5f6a-7b8c-9d0e-1f2a3b4c5d6e</Id>

  <!-- Bump this when you change manifest behavior -->
  <Version>1.1.0.0</Version>

  <ProviderName>EmailTrackMaster</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="EmailTrackMaster"/>
  <Description DefaultValue="Email performance and SLA tracking."/>
  <SupportUrl DefaultValue="https://example.com/support"/>

  <!-- These icons are just placeholders. Replace later with your own hosted assets. -->
  <IconUrl DefaultValue="https://picsum.photos/64/64"/>
  <HighResolutionIconUrl DefaultValue="https://picsum.photos/128/128"/>

  <!-- Hosts allowed for navigation / taskpane content -->
  <AppDomains>
    <AppDomain>https://kranuabs13.github.io</AppDomain>
    <AppDomain>https://glastmgtyigzbxxgcdbo.supabase.co</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Keep 1.8 since youâ€™re using modern APIs and OnMessageSend pattern -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Show in both Read and Compose -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- VersionOverrides: commands + taskpane + on-send -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.8">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- This must point to commands.html which loads office.js + commands.js -->
          <FunctionFile resid="Commands.Url"/>

          <!-- ========== READ SURFACE BUTTON ========== -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ETM.Read.Group">
                <Label resid="Group.Label"/>
                <Control xsi:type="Button" id="ETM.Read.OpenDashboard">
                  <Label resid="Button.Label"/>
                  <Supertip>
                    <Title resid="Button.Label"/>
                    <Description resid="Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- ========== COMPOSE SURFACE BUTTON ========== -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ETM.Compose.Group">
                <Label resid="Group.Label"/>
                <Control xsi:type="Button" id="ETM.Compose.OpenDashboard">
                  <Label resid="Button.Label"/>
                  <Supertip>
                    <Title resid="Button.Label"/>
                    <Description resid="Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- ========== ON-SEND BLOCKING EVENT ========== -->
          <ExtensionPoint xsi:type="LaunchEvent">
            <LaunchEvents>
              <LaunchEvent Type="OnMessageSend"
                           FunctionName="onMessageSendHandler"
                           SendMode="Block"/>
            </LaunchEvents>
            <SourceLocation resid="Commands.Url"/>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://picsum.photos/16/16"/>
        <bt:Image id="Icon.32" DefaultValue="https://picsum.photos/32/32"/>
        <bt:Image id="Icon.80" DefaultValue="https://picsum.photos/80/80"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url"
                DefaultValue="https://kranuabs13.github.io/Emailtrackmaster/commands.html"/>
        <bt:Url id="Taskpane.Url"
                DefaultValue="https://kranuabs13.github.io/Emailtrackmaster/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="EmailTrack"/>
        <bt:String id="Button.Label" DefaultValue="Open Dashboard"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="Button.Desc" DefaultValue="Opens the EmailTrackMaster dashboard."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>

</OfficeApp>
