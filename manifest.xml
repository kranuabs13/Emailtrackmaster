<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>7d2b3c4e-5f6a-7b8c-9d0e-1f2a3b4c5d6e</Id>
  <Version>1.1.0.1</Version>
  <ProviderName>EmailTrackMaster</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="EmailTrackMaster"/>
  <Description DefaultValue="Email performance and SLA tracking."/>

  <!-- REQUIRED for MailApp schema -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://kranuabs13.github.io/Emailtrackmaster/taskpane.html"/>
        <RequestedHeight>600</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://kranuabs13.github.io/Emailtrackmaster/taskpane.html"/>
        <RequestedHeight>600</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Optional but commonly included -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Activation rule -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <!-- These can be present, but MUST be placed after required MailApp elements above -->
  <IconUrl DefaultValue="https://picsum.photos/64/64"/>
  <HighResolutionIconUrl DefaultValue="https://picsum.photos/128/128"/>
  <SupportUrl DefaultValue="https://example.com/support"/>

  <AppDomains>
    <AppDomain>https://kranuabs13.github.io</AppDomain>
    <AppDomain>https://glastmgtyigzbxxgcdbo.supabase.co</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>

  <!-- Commands + OnMessageSend -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.8">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- Commands runtime file -->
          <FunctionFile resid="Commands.Url"/>

          <!-- READ surface button -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ETM.Read.Group">
                <Label resid="Group.Label"/>
                <Control xsi:type="Button" id="ETM.Read.OpenDashboard">
                  <Label resid="Button.Label"/>
                  <Supertip>
                    <Title resid="Button.Label"/>
                    <Description resid="Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- COMPOSE surface button -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="ETM.Compose.Group">
                <Label resid="Group.Label"/>
                <Control xsi:type="Button" id="ETM.Compose.OpenDashboard">
                  <Label resid="Button.Label"/>
                  <Supertip>
                    <Title resid="Button.Label"/>
                    <Description resid="Button.Desc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- ON-SEND blocking -->
          <ExtensionPoint xsi:type="LaunchEvent">
            <LaunchEvents>
              <LaunchEvent Type="OnMessageSend"
                           FunctionName="onMessageSendHandler"
                           SendMode="Block"/>
            </LaunchEvents>
            <SourceLocation resid="Commands.Url"/>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://picsum.photos/16/16"/>
        <bt:Image id="Icon.32" DefaultValue="https://picsum.photos/32/32"/>
        <bt:Image id="Icon.80" DefaultValue="https://picsum.photos/80/80"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Commands.Url"
                DefaultValue="https://kranuabs13.github.io/Emailtrackmaster/commands.html"/>
        <bt:Url id="Taskpane.Url"
                DefaultValue="https://kranuabs13.github.io/Emailtrackmaster/taskpane.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="Group.Label" DefaultValue="EmailTrack"/>
        <bt:String id="Button.Label" DefaultValue="Open Dashboard"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="Button.Desc" DefaultValue="Opens the EmailTrackMaster dashboard."/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>

</OfficeApp>
